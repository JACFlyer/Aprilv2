<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/april_navigation"
  app:startDestination="@id/aprilStart">

  <fragment
    android:id="@+id/aprilStart"
    android:name="edu.cnm.deepdive.aprilv2.controller.aprilstart.AprilStartFragment"
    android:label="fragment_april_start"
    tools:layout="@layout/fragment_april_start">
    <action
      android:id="@+id/action_aprilStart_to_registration"
      app:destination="@id/registration"/>
    <action
      android:id="@+id/action_aprilStart_to_landingPage"
      app:destination="@id/landingPage"/>
  </fragment>
  <fragment
    android:id="@+id/registration"
    android:name="edu.cnm.deepdive.aprilv2.controller.registration.RegistrationFragment"
    android:label="fragment_registration"
    tools:layout="@layout/fragment_registration">
    <action
      android:id="@+id/action_registration_to_profileFragment"
      app:destination="@id/profileFragment"/>
    <action
      android:id="@+id/action_registration_to_profileFragment2"
      app:destination="@id/profileFragment"/>
  </fragment>
  <fragment
    android:id="@+id/profileFragment"
    android:name="edu.cnm.deepdive.aprilv2.controller.userprofile.UserProfileFragment"
    android:label="fragment_profile"
    tools:layout="@layout/fragment_profile">
    <action
      android:id="@+id/action_profileFragment_to_landingPage"
      app:destination="@id/landingPage"/>
  </fragment>
  <fragment
    android:id="@+id/landingPage"
    android:name="edu.cnm.deepdive.aprilv2.controller.landingpage.LandingPageFragment"
    android:label="fragment_landing_page"
    tools:layout="@layout/fragment_landing_page">
    <action
      android:id="@+id/action_landingPage_to_alertsFragment"
      app:destination="@id/alertsFragment"/>
    <action
      android:id="@+id/action_landingPage_to_assessmentFragment"
      app:destination="@id/assessmentFragment"/>
    <action
      android:id="@+id/action_landingPage_to_journalFragment"
      app:destination="@id/journalFragment"/>
    <action
      android:id="@+id/action_landingPage_to_lessonsFragment"
      app:destination="@id/lessonsFragment"/>
  </fragment>
  <fragment
    android:id="@+id/alertsFragment"
    android:name="edu.cnm.deepdive.aprilv2.controller.alerts.AlertsFragment"
    android:label="fragment_alerts"
    tools:layout="@layout/fragment_alerts"/>
  <fragment
    android:id="@+id/assessmentFragment"
    android:name="edu.cnm.deepdive.aprilv2.controller.assessment.AssessmentFragment"
    android:label="fragment_assessment"
    tools:layout="@layout/fragment_assessment"/>
  <fragment
    android:id="@+id/journalFragment"
    android:name="edu.cnm.deepdive.aprilv2.controller.journal.JournalFragment"
    android:label="fragment_journal"
    tools:layout="@layout/fragment_journal"/>
  <fragment
    android:id="@+id/lessonsFragment"
    android:name="edu.cnm.deepdive.aprilv2.controller.lessons.LessonsFragment"
    android:label="fragment_lessons"
    tools:layout="@layout/fragment_lessons"/>
</navigation>