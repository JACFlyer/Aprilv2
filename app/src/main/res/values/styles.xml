<resources>

    <!--  TODO Extract/reference dimension resources.-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#D7F0DC</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JournalItem" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/item_apod_spacing</item>
    </style>

    <style name="JournalItem.Title" parent="JournalItem">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JournalItem.Access" parent="JournalItem">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="LinkLabel" parent="AppTheme">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyText" parent="AppTheme">
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
