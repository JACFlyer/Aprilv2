<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
android:layout_height="100dp"
app:cardCornerRadius="5dp"
app:rippleColor="@color/colorPrimaryDark"
app:cardPreventCornerOverlap="true"
android:layout_marginTop="5dp"
android:layout_marginBottom="5dp"
android:elevation="50dp"
android:layout_marginStart="20dp"
android:layout_marginEnd="20dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:theme="@style/JournalItem">


    <TextView
      android:id="@+id/journal_subject"
      android:layout_width="120dp"
      android:layout_height="26dp"
      android:layout_marginTop="16dp"
      android:text="Journal Entry Subject"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>

    <TextView
      android:id="@+id/journal_entry_date"
      android:layout_width="80dp"
      android:layout_height="26dp"
      android:text="Journal Entry Date"
      android:textAppearance="@style/TextAppearance.AppCompat.Medium"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="journal_subject"


      app:layout_constraintTop_toTopOf="parent"/>
  </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>