<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_margin="2dp"
  app:cardCornerRadius="2dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:padding="8dp"
    android:background="?android:attr/selectableItemBackground">

    <TextView
      android:id="@+id/contraction_label"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/contraction"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

    <TextView
      android:id="@+id/timestamp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/contraction_start"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:text="@string/start"
      app:layout_constraintTop_toBottomOf="@id/contraction_label"
      app:layout_constraintStart_toStartOf="parent"/>


    <TextView
      android:id="@+id/contraction_pain"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:text="@string/pain"
      app:layout_constraintTop_toBottomOf="@id/contraction_start"
    app:layout_constraintStart_toStartOf="parent"/>


    <TextView
      android:id="@+id/contraction_end"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:text="@string/end"
      app:layout_constraintTop_toBottomOf="@id/contraction_pain"
      app:layout_constraintStart_toStartOf="parent"/>


    <TextView
      android:id="@+id/contraction_start_time"
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:layout_constraintTop_toBottomOf="@id/timestamp"
      app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
      android:id="@+id/contraction_pain_value"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:hint="@string/_0_to_10"
      app:layout_constraintTop_toBottomOf="@id/contraction_start_time"
      app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
      android:id="@+id/contraction_end_time"
      android:layout_width="40dp"
      android:layout_height="40dp"
      app:layout_constraintTop_toBottomOf="@id/contraction_pain_value"
      app:layout_constraintEnd_toEndOf="parent"/>


  </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>